record(bo, "$(P)SIM")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
    field(VAL, "$(RECSIM=0)")
    field(PINI, "YES")
}

record(bo, "$(P)DISABLE")
{
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(VAL, "$(DISABLE=0)")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")
}

record(ai, "$(P)SENSOR1:RAW") {
    field(DTYP, "stream")
    field(INP, "@mecfrf.proto getSensor1 $(PORT)")
    field(SCAN, "I/O Intr")
    
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:SENSOR1")
    field(SDIS, "$(P)DISABLE")
    field(SSCN, ".1 second")
}

record(calc, "$(P)SENSOR1:CALC") {
    field(INPA, "$(P)SENSOR1:RAW CP MS")
    field(CALC, "A/1000000")
}

record(ai, "$(P)SENSOR1") {
    field(INP, "$(P)SENSOR1:CALC CP MS")
    field(PREC, "6")
    field(EGU, "mm")
}

record(ai, "$(P)SENSOR2:RAW") {
    field(PREC, "6")
    field(EGU, "mm")
    field(DTYP, "stream")
    field(INP, "@mecfrf.proto getSensor2 $(PORT)")
    field(SCAN, "I/O Intr")
    
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:SENSOR2")
    field(SDIS, "$(P)DISABLE")
    field(SSCN, ".1 second")
}

record(calc, "$(P)SENSOR2:CALC") {
    field(INPA, "$(P)SENSOR2:RAW CP MS")
    field(CALC, "A/1000000")
}

record(ai, "$(P)SENSOR2") {
    field(INP, "$(P)SENSOR2:CALC CP MS")
    field(PREC, "6")
    field(EGU, "mm")
}



# Simulation records

record(ao, "$(P)SIM:SENSOR1:RAW") {
    field(OUT, "$(P)SENSOR1 PP")
}

record(ao, "$(P)SIM:SENSOR2:RAW") {
    field(OUT, "$(P)SENSOR2 PP")
}
